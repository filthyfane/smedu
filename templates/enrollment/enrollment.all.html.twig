{% extends 'base.nav.html.twig' %}

{% block title %}Înscrieri -> Status{% endblock %}

{% block body %}

<div class="enrollment-wrapper">
  <h1>Înscrieri {{ current_year.getYearlabel|lower }}</h1>
  <br>
  {% if current_units is not empty %}
    {% for schoolunit in current_units %}
      <h2>Înscrieri {{ schoolunit.unitname|lower }} </h2>
      {% if schoolunit.getEnrollments is not empty %}
        <table id="enrollments-{{ schoolunit.id }}" class="table table-striped table-hover">

          <thead>
            <tr>
              <th>Nume Elev</th>
              <th>Nume Părinte</th>
              <th>Serviciu</th>
              <th>Data Înscrierii</th>
              <th>Activ</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            {% for enrollment in schoolunit.getEnrollments %}
              <tr>
                <td>{{ enrollment.getIdChild.username }}</td>
                <td>{{ enrollment.getIdParent.username }}</td>
                <td>{{ enrollment.getIdService.servicename }}</td>
                <td>{{ enrollment.getEnrollDate|localizeddate('medium', 'none', 'ro') }}</td>
                {% if enrollment.isActive == 0 %}
                  <td style='color:#f00'><i class="fas fa-times"></i></td>
                {% else %}
                  <td style='color:#0f0'><i class="fas fa-check"></i></td>
                {% endif %}
                <td>
                  <a href="{{ path('edit_enrollment', {'enrollId':enrollment.id}) }}"><button type="button" class="btn btn-primary">Modifică</button></a>
                </td>
              </tr>
            {% endfor %}
          </tbody>

        </table>
        <br>
      {% else %}
        <p>Nu există nicio înscriere în această unitate</p>
        <hr><br>
      {% endif %}
    {% endfor %}
  {% else %}
    <p>Nu există nicio unitate școlară definită în acest an școlar</p>
  {% endif %}


</div>

{% endblock %}
