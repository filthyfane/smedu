{% extends 'base.html.twig' %}

{% block title %}Hello! {% endblock %}

{% block body %}

<div class="login-wrapper">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column">

        <!-- ✅ -->
        <center><img src="/img/logo.planeta.copiilor.png" alt="" width="200px" height="auto"></center>
        <h1 class="kuraleFont">iTeachSmart</h1>
        <br>
        {% if error %}
          <span class="error"><code>{{ error }}</code></span>
        {% endif %}
        <form action="{{ path('login') }}" method="POST">
          <center>
            <input type="text" name="_username" class="form-control" value="{{ last_username }}" placeholder="User...">
            <br>
            <input type="password" name="_password" class="form-control" placeholder="Parolă...">
            <br>
            <br>
            <button type="submit" class="btn btn-success mt-1">Login</button>
          </center>
        </form>
    </div>
  </div>
</div>

{% endblock %}
